<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.IAPTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="WalletFragmentDefaultDetailsTextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/wallet_secondary_text_holo_dark</item>
        <item name="android:textColorHighlight">@color/wallet_highlighted_text_holo_dark</item>
        <item name="android:textColorHint">@color/wallet_hint_foreground_holo_dark</item>
        <item name="android:textColorLink">@color/wallet_holo_blue_light</item>
    </style>
    <style name="WalletFragmentDefaultDetailsHeaderTextAppearance" parent="@style/WalletFragmentDefaultDetailsTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="WalletFragmentDefaultButtonTextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/wallet_primary_text_holo_light</item>
        <item name="android:textColorHighlight">@color/wallet_highlighted_text_holo_light</item>
        <item name="android:textColorHint">@color/wallet_hint_foreground_holo_light</item>
        <item name="android:textColorLink">@color/wallet_link_text_light</item>
    </style>
    <style name="WalletFragmentDefaultStyle">
        <item name="buyButtonHeight">48.0dip</item>
        <item name="buyButtonWidth">match_parent</item>
        <item name="buyButtonText">buy_with_google</item>
        <item name="buyButtonAppearance">classic</item>
        <item name="maskedWalletDetailsTextAppearance">@style/WalletFragmentDefaultDetailsTextAppearance</item>
        <item name="maskedWalletDetailsHeaderTextAppearance">@style/WalletFragmentDefaultDetailsHeaderTextAppearance</item>
        <item name="maskedWalletDetailsBackground">@color/wallet_bright_foreground_holo_light</item>
        <item name="maskedWalletDetailsButtonTextAppearance">@style/WalletFragmentDefaultButtonTextAppearance</item>
        <item name="maskedWalletDetailsButtonBackground">@android:drawable/btn_default</item>
        <item name="maskedWalletDetailsLogoTextColor">@color/wallet_bright_foreground_holo_dark</item>
        <item name="maskedWalletDetailsLogoImageType">classic</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="Theme.Tagz" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Tagz</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Tagz</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Tagz</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_tagz</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Tagz</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tagz</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Tagz</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.Tagz.Widget</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_tagz</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_tagz</item>
    </style>
    <style name="ActionBar.Solid.Tagz" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:progressBarStyle">@style/ProgressBar.Tagz</item>
        <item name="android:background">@drawable/ab_solid_tagz</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_tagz</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_tagz</item>
    </style>
    <style name="ActionBar.Transparent.Tagz" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:progressBarStyle">@style/ProgressBar.Tagz</item>
        <item name="android:background">@drawable/ab_transparent_tagz</item>
    </style>
    <style name="PopupMenu.Tagz" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tagz</item>
    </style>
    <style name="DropDownListView.Tagz" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_tagz</item>
    </style>
    <style name="ActionBarTabStyle.Tagz" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_tagz</item>
    </style>
    <style name="DropDownNav.Tagz" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_tagz</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_tagz</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tagz</item>
    </style>
    <style name="ProgressBar.Tagz" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_tagz</item>
    </style>
    <style name="ActionButton.CloseMode.Tagz" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_tagz</item>
    </style>
    <style name="Theme.Tagz.Widget" parent="@android:style/Theme.Holo">
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Tagz</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Tagz</item>
    </style>
</resources>
