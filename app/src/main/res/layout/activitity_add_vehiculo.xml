<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="#027b00" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_bottom_top_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_bottom_top_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textColor="#fff3f3f3" android:id="@id/tvObligatorios" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="OBLIGATORIOS" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="#fff3f3f3" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@id/tvTipoVehiculo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tipo" />
        <Spinner android:id="@id/spinnerTipoVehiculo" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TextView android:id="@id/tvNombreVehiculo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nombre" />
        <EditText android:id="@id/etNombreVehiculo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:ems="10" android:maxLength="18" android:inputType="textPersonName">
            <requestFocus />
        </EditText>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_bottom_top_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_bottom_top_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textColor="#fff3f3f3" android:id="@id/tvOpcionales" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="OPCIONALES" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="#fff3f3f3" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@id/tvMarca" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Marca" />
        <EditText android:id="@id/etMarca" android:layout_width="fill_parent" android:layout_height="wrap_content" android:ems="10" android:maxLength="20" android:inputType="textPersonName" />
        <TextView android:id="@id/tvModelo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Modelo" />
        <EditText android:id="@id/etModelo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:ems="10" android:maxLength="20" android:inputType="textPersonName" />
        <TextView android:id="@id/tvPatente" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Patente" />
        <EditText android:id="@id/etPatente" android:layout_width="fill_parent" android:layout_height="wrap_content" android:ems="10" android:maxLength="20" android:inputType="textPersonName" />
    </LinearLayout>
</LinearLayout>